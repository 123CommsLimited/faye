# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/faye.rb'

Hoe.spec('faye') do
  self.developer('James Coglan', 'jcoglan@googlemail.com')
  self.description = 'Simple pub/sub messaging for the web'
  self.extra_deps = [
    ['eventmachine', '>= 0.12'],
    ['em-http-request', '>= 0.2'],
    ['rack', '>= 1.0'],
    ['thin', '>= 1.2'],
    ['json', '>= 1.0']
  ]
end

